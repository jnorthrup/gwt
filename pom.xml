     <module>gwt-samples_mail</module>
     <module>gwt-samples_mobilewebapp</module>
     <module>gwt-samples_showcase</module>
     <module>gwt-samples_validation</module>-->
    <module>gwt-tools_api-checker</module>
    <module>gwt-tools_benchmark-viewer</module>
