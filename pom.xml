  <modelVersion>4.0.0</modelVersion>
  <groupId>com.google.gwt</groupId>
  <artifactId>gwt-parent</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>gwt-parent</name>
  <description>gwt Terraformed... by jim@keyframe... on Intel(R) Core(TM) i7 CPU X 000 @ 3.33GHz GenuineIntel
    GNU/Linux... for
    build_tools_ant_gwt,build_tools_doctool,dev_core,distro-source,distro-source_core,doc,elemental,elemental_examples_silvercomet,elemental_examples_simple,reference_Microbenchmarks,reference_code-museum,samples_dynatable,samples_dynatablerf,samples_hello,samples_json,samples_logexample,samples_mail,samples_mobilewebapp,samples_showcase,samples_validation,tools_api-checker,tools_benchmark-viewer,tools_cldr-import,tools_datetimefmtcreator,user...
  </description>
  <url>http://keyframe</url>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.source.version>1.6</java.source.version>
    <java.target.version>1.6</java.target.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <id>gwt-legacy</id>
      <name>gwt-Repo</name>
      <url>http://gwt-maven-rewraps.googlecode.com/git/</url>
      <layout>default</layout>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>maven-idea-plugin-repo</id>
      <url>http://maven-idea-plugin.googlecode.com/svn/maven-repo</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.0</version>
        <configuration>
          <source>${java.source.version}</source>
          <target>${java.target.version}</target>
          <fork>true</fork>
          <meminitial>1024m</meminitial>
          <maxmem>1024m</maxmem>
          <excludes>
            <exclude>**/super/**</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>

        <!--
        intellij sanity.... If this plugin matters to you then paste this into console after you import the poms

         for i in gwt-*; do excludes=$( find $i -name super -type d -or -name translatable -type d -or -name emul -type d ) ; rex=$(for j in ${excludes}; do echo '<excludeFolder url="file://$MODULE_DIR$'${j//$i}'" />'; done); sed -i -e 's|</content>|'"$(echo ${rex}|tr -d '\n') "'</content>|' $i/$i.iml;done

          -->
        <groupId>com.googlecode</groupId>
        <artifactId>maven-idea-plugin</artifactId>
        <version>1.6.1</version>
        <configuration>
          <assembleModulesIntoJars>false</assembleModulesIntoJars>
          <compileInBackground>true</compileInBackground>
          <jdkName>1.6</jdkName>
          <jdkLevel>JDK_1_6</jdkLevel>
          <downloadSources>true</downloadSources>
          <downloadJavadocs>true</downloadJavadocs>
          <assertNotNull>false</assertNotNull>
          <optimizeImportsBeforeCommit>false</optimizeImportsBeforeCommit>
          <reformatCodeBeforeCommit>false</reformatCodeBeforeCommit>
          <performCodeAnalisisBeforeCommit>false</performCodeAnalisisBeforeCommit>
          <autoscrollToSource>false</autoscrollToSource>
          <autoscrollFromSource>true</autoscrollFromSource>
          <hideEmptyPackages>false</hideEmptyPackages>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>gwt-core</module>
    <module>gwt-dev_core</module>
    <module>gwt-user</module>
    <!--
        TODO: review
        <module>gwt-build_tools_ant_gwt</module>
        <module>gwt-build_tools_doctool</module>
    -->
